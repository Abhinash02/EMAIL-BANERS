                                <tr>
                                    <% for(let digit of otp.split('')) { %>
                                        <td style="background:#E3EBFF; padding:15px 25px; font-size:20px; font-weight:bold; border-radius:6px;"><%= digit %></td>
                                    <% } %>
                                </tr>
                            </table>
                            <p style="margin:0 0 20px 0;">OTP will expire in <strong>5 minutes.</strong></p>
